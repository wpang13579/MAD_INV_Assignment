<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playful">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <!-- Timer -->
            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:text="â° Timer: 15"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/timer_background"
                android:padding="10dp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:fontFamily="@font/baloo"/>

            <!-- Question -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick two numbers to make:"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"/>

            <!-- Target Number -->
            <TextView
                android:id="@+id/targetNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/baloo"/>

            <!-- Selected Numbers -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/selectedNumber1"
                    android:text="?"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:background="@drawable/selected_text_background"
                    android:fontFamily="@font/baloo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" + "
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/baloo"/>

                <TextView
                    android:id="@+id/selectedNumber2"
                    android:text="?"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:background="@drawable/selected_text_background"
                    android:fontFamily="@font/baloo"/>
            </LinearLayout>

            <!-- Number Option Buttons -->
            <GridLayout
                android:id="@+id/numberGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- Apply font and colors to each number button -->
                <Button
                    android:id="@+id/number1Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@drawable/round_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo"/>

                <Button
                    android:id="@+id/number2Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@drawable/round_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo"/>

                <Button
                    android:id="@+id/number3Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@drawable/round_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo"/>

                <Button
                    android:id="@+id/number4Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@drawable/round_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo"/>

                <Button
                    android:id="@+id/number5Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@drawable/round_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo"/>

                <Button
                    android:id="@+id/number6Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@drawable/round_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo"/>
            </GridLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_button"
                    android:padding="10dp"
                    android:text="ðŸ”„ Reset"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/baloo"/>

                <Button
                    android:id="@+id/checkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… Check"
                    android:enabled="false"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/round_button"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/baloo"/>
            </LinearLayout>

            <!-- Feedback -->
            <ImageView
                android:id="@+id/resultImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/correctAnswerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/baloo"/>

            <!-- New Question -->
            <Button
                android:id="@+id/newQuestionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ² Next!"
                android:textColor="@android:color/white"
                android:padding="10dp"
                android:textSize="16sp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/baloo"/>

            <Button
                android:id="@+id/tryAgainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/round_button"
                android:padding="12dp"
                android:text="ðŸ” Try Again"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/baloo"/>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back" />
</FrameLayout>
